CREATE TABLE FILM
(id_film INT PRIMARY KEY,
name_film VARCHAR(50) NOT NULL,
launch_year YEAR NOT NULL,
director VARCHAR(50));

CREATE TABLE ATORES
(id_actor INT PRIMARY KEY,
name_actor VARCHAR(50),
cache_actor NUMERIC NOT NULL);

CREATE TABLE FILM_ACTOR
(id_film_actor INT PRIMARY KEY,
id_film NUMERIC NOT NULL,
id_actor NUMERIC NOT NULL,
launch_year NUMERIC NOT NULL);

DROP TABLE film_actor;

CREATE TABLE FILME_ACTOR AS
SELECT id_ator, id_film
FROM FILM, ATORES;

CREATE TABLE CATEGORIA
(id_categoria INT PRIMARY KEY,
id_film NUMERIC NOT NULL,
tipo VARCHAR(50));

CREATE TABLE CINEMA
(id_cine INT PRIMARY KEY,
endere√ßo VARCHAR(50));

CREATE TABLE CIDADE
(id_city INT PRIMARY KEY,
id_cine NUMERIC NOT NULL,
name_city VARCHAR(20));

CREATE TABLE EMPRESA
(id_empresa INT PRIMARY KEY,
name_company VARCHAR(15),
film_id NUMERIC NOT NULL);

#CONSULTA-JOIN

SELECT FILME.name_film, ATORES.id_actor, ATORES.name_actor
FROM FILM
INNER JOIN ATORES ON
FILM.film_id = ATORES.i_actor;

SELECT FILM.name_film, ATORES.id_actor
FROM FILM
LEFT JOIN ATORES ON
FILM.film_id = ATORES.i_actor;

SELECT FILM.name_film, ATORES.id_actor, ATORES.cache_actor
FROM FILM
RIGHT JOIN ATORES ON FILM.id_film = ATORES.id_actor;

SELECT EMPRESA.name_company, EMPRESA.id_empresa
FROM EMPRESA
INNER JOIN FILM ON FILM.id_film = EMPRESA.id_empresa;

#CONSULTA-ORDER-BY

SELECT * FROM FILM
ORDER BY director;

SELECT * FROM FILM
ORDER BY name_film;

SELECT * FROM FILM
ORDER BY launch_year;

#JOIN-ORDER-BY

SELECT ATORES.name_film
FROM ATORES
INNER JOIN FILM ON FILM.id_film = ATORES.id_actor
ORDER BY ATORES;

SELECT COUNT(launch_year)
FROM FILM;

SELECT COUNT(cache_actor)
FROM ATORES;

CREATE VIEW view_1 AS SELECT * FROM FILM;

CREATE VIEW view_2 AS SELECT * FROM ATORES;

CREATE VIEW view_3 AS SELECT * FROM CINEMA;

CREATE VIEW view_4 AS SELECT * FROM EMPRESA;

CREATE VIEW view_5 AS SELECT * FROM CIDADE;
